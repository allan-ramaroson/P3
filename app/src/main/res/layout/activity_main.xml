<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/filename"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="No Photo Taken Yet for today"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/description"
        app:layout_constraintVertical_weight="0.1"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Add a description before saving"
        app:layout_constraintTop_toBottomOf="@id/filename"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mainImg"
        app:layout_constraintVertical_weight="0.1"/>

    <ImageView
        android:id="@+id/mainImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/saveBtn"
        app:layout_constraintVertical_weight="0.6"/>

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="SAVE"
        android:onClick="onClickSave"
        app:layout_constraintTop_toBottomOf="@id/mainImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cameraBtn"
        app:layout_constraintVertical_weight="0.1"/>

    <Button
        android:id="@+id/cameraBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="CAMERA"
        android:onClick="onClickCamera"
        app:layout_constraintTop_toBottomOf="@id/saveBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="0.1"/>



</androidx.constraintlayout.widget.ConstraintLayout>